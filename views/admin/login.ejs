<body>
    <%- include alert %>

    <div class="form-box">
        <h2 class="text-center">
            <small class="glyphicon glyphicon-eject"></small>
            后台管理登录</h2>
        <form class="bs-example bs-example-form" method="POST" action="/admin/login" role="form">
            <div class="input-group">
                <span class="input-group-addon">
                    <small class="glyphicon glyphicon-user"></small>
                </span>
                <input type="text" name="account" class="form-control" placeholder="管理员帐号">
            </div>
            <div style="height: 0.8em"></div>
            <div class="input-group">
                <span class="input-group-addon">
                    <small class="glyphicon glyphicon-lock"></small>
                </span>
                <input type="password" name="passwd" class="form-control" placeholder="管理员密码">
            </div>
            <div style="height: 2em"></div>
            <div class="form-group">
                <input type="submit" value="登录" class="btn btn-primary">
            </div>
        </form>
    </div>
</body>

</html>