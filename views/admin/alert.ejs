<div class="container">
    <% if (success) { %>
    <div class="alert alert-success" role="alert">
        <%= success %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    <% } %>
    <% if (error) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    <% } %>
</div>